# Database
DATABASE_URL=postgresql://trading_user:trading_pass@localhost:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379

# Google OAuth - Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback

# JWT - Generate a secure random string
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_at_least_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Settings
APP_NAME=Trading Platform
DEBUG=false

# Note: IIFL API credentials are stored per user in the database after login
# They are not global environment variables
